{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@modules/*":     ["modules/*"],
      "@middlewares/*": ["middlewares/*"],
      "@config/*":      ["config/*"],
      "@shared/*":      ["shared/*"],
      "@utils/*":       ["utils/*"],
      "@errors/*":      ["errors/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}